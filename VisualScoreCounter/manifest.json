{
  "$schema": "https://raw.githubusercontent.com/bsmg/BSIPA-MetadataFileSchema/master/Schema.json",
  "id": "VisualScoreCounter",
  "name": "VisualScoreCounter",
  "author": "recursive",
  "version": "1.0.0",
  "description": "A configurable and readable score counter.",
  "gameVersion": "1.20.0",
  "dependsOn": {
    "BSIPA": "^4.2.1",
    "BeatSaberMarkupLanguage": "^1.6.0",
    "SiraUtil": "^3.0.2"
  },
  "loadAfter": [
    "Counters+"
  ],
  "features": {
    "CountersPlus.CustomCounter": {
      "Name": "Visual Score Counter",
      "Description": "A configurable and readable score counter.",
      "CounterLocation": "VisualScoreCounter.VSCounter.VSCounterController",
      "MultiplayerReady": true,
      "ConfigDefaults": {
        "Enabled": true,
        "Position": "BelowMultiplier",
        "Distance": 0
      },
      "BSML": {
        "Resource": "VisualScoreCounter.VSCounter.Configuration.BSML.CounterSettings.bsml",
        "Host": "VisualScoreCounter.VSCounter.Configuration.CounterConfigController",
        "Icon":  "VisualScoreCounter.Resources.Icon.png"
      }
    }
  }
}